doctype
html(lang="es")
	head
		title Consultorios JAI
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet', href='/css/bootstrap.css')
		link(rel='tylesheet', href='font-awesome/css/font-awesome.css')
		link(rel='stylesheet', href='/css/sb-admin.css')
	body
		div.container
			div.row
				div.col-md-4.col-md-offset-4
					div.login-panel.panel.panel-default
						div.panel-heading
							h3.panel-title Autenticarse                    
						div.panel-body
							form(role='form', method='post', action='/login')
								fieldset
									div.form-group
										input.form-control(placeholder='E-mail', name='email', type='email' autofocus='')                                
									div.form-group
										input.form-control(placeholder='Password', name='password', type='password', value='')
									input.btn.btn-lg.btn-success.btn-block(value='Entrar', type='submit')